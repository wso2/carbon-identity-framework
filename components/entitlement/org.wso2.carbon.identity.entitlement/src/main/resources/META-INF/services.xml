        </operation>
        <operation name="refreshResourceFinder">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/configure/entitlement/pdp/manage</parameter>
        </operation>
        <operation name="setGlobalPolicyAlgorithm">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/configure/entitlement/pdp/manage</parameter>
        </operation>

